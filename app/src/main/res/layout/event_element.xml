<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:id="@+id/event_checkbox"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/event_checkbox"
        android:layout_toStartOf="@id/bell_image"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:id="@+id/element_text"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/bell_image"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:id="@+id/element_duration"
        tools:ignore="RtlCompat" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/bell_image"
        android:scaleType="centerInside"
        android:src="@drawable/bell_empty"
        android:layout_gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

</RelativeLayout>